{{#if erros}}
  <div class="alert alert-danger">
    <center>
      {{#each erros}}
      <label class="errosTexto">*{{texto}}</label>
      {{else}}

      {{/each}}
    </center>
  </div>
{{/if}}
  <div id="flashMsg">
    {{#if success_msg}}
    <div class="alert alert-success">
      <p>{{success_msg}}</p>
      <p class="btnClose">X</p>
    </div>
    {{/if}}

    {{#if error_msg}}
    <div class="alert alert-danger">
      <p>{{error_msg}}</p>
      <p class="btnClose">X</p>
    </div>
    {{/if}}
    {{#if warning_msg}}
    <div class="alert alert-warning">
      <p>{{warning_msg}}</p>
      <p class="btnClose">X</p>
    </div>
    {{/if}}
  </div>
<div id="containerMain">
  <div id="container">
      <div id="foto">
        <img src={{fotoPerfil}} id="imagem">
        <div id="submit">
          <form action="/user/upload/{{_id}}" method="post" enctype="multipart/form-data">
            <label for="inputFile" id="lblInputFile">Escolher imagem</label>
            <input id="inputFile" type="file" name="foto" accept="image/*">
            <input type="submit" value="Salvar imagem" id="confirmarIMG">
          </form>
        </div>
        <div>
        </div>
      </div>
      <div id="dados">
        <p id="username" name="username">{{usuario}}</p>
        <p id="email" name="email">{{email}}</p>
      </div>
      <form action="/user/Edit" method="get" id="editar">
        <label for="edit"><span class="material-icons" id="icon">edit</span></label>
        <button id="edit"></button>
      </form>
    </div>
    <div id="favoritos">
      {{#if dados}}
        {{#each dados}}
            <div class="card">
              <div class="card-body">
                <img class="card-img-top" src={{foto}} alt="Imagem de capa do card">
                <h5 class="card-title">{{nome}}</h5>
                <p class="card-text">{{rua}}, {{numero}}</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
              </div>
            </div>
        {{else}}

        {{/each}}
        
      {{/if}}
    </div>
</div>

