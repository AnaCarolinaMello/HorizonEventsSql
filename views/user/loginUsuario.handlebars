{{#if erros}}
<div class="alert alert-danger"><center>
{{#each erros}}
    <label class="errosTexto">*{{texto}}</label>
{{else}}

{{/each}}  
</div></center>
{{/if}}
<div id="container">
        <form action="/userLogin" method="post" id="login">
            <h2>Horizon of events</h2>
            <!-- <p>Faça login para encontrar um horizonte de eventos</p> -->
            <input type="email" id="text" placeholder="Email ou nome de usuário" required name="email"  oninvalid="Digite seu email" value= {{emailErro}}>
            <input type="password" id="senha" placeholder="Senha" required name="senha">
            <input type="submit" id="confirm" value="Entrar">
        </form>
        <div id="cadastro">
            <p>Ainda não tem uma conta? <a href="userSignup">Cadastre-se</a></p>
        </div>
</div>