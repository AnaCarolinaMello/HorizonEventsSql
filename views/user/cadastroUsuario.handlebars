{{#each erros}}
    <div class="alert alert-danger"><p>{{texto}}</p></div>
{{else}}

{{/each}}
<div id="container">
    <form action="/userPerfil" method="post" id="cadastro">
        <h2>Horizon of events</h2>
        <p id="txtHorizon">Cadastre-se para encontrar um horizonte de enventos</p>
        <input id="nome" type="text" placeholder="Nome completo" required name="nome" class = {{erro}} autocomplete="off" autocapitalize="off" autocorrect="off" >
        <input id = "username" type="text" placeholder="Nome de usuário" required name="username" class = {{erro}} autocomplete="off" autocapitalize="off" autocorrect="off" >
        <input id = "email" type="text" placeholder="Email" required name="email" class = {{erro}} autocomplete="off" autocapitalize="off" autocorrect="off" >
        <input id = "telefone" type="tel" placeholder="Telefone" name="telefone">
        <input id="senha" type="password" min="8" max="32" placeholder="Senha" name="senha" class = {{erro}}>
        <input id="confirme_senha" type="password" min="8" max="32"placeholder="Senha" name="confirme_senha" class = {{erro}}>
        <input type="submit" id="confirm">
    </form>
    <div id="login">
        <p>Já tem uma conta? <a href="userLogin">Faça login</a></p>
    </div>
</div>